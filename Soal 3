#include <iostream>
using namespace std;

int main() {
    int n;
    int hadir = 0;
    int tidakHadir = 0;
    int input;

    cout << "=== Kehadiran Kelas ===" << endl;
    cout << "Masukkan jumlah mahasiswa: ";
    cin >> n;

    for (int i = 1; i <= n; i++) {
        cout << "Mahasiswa " << i << " (1=hadir, 0=tidak): ";
        cin >> input;

        if (input == 1) {
            hadir++;
        } else if (input == 0) {
            tidakHadir++;
        }
    }

    double persentase = (hadir * 100.0) / n;

    cout << endl;
    cout << "Hadir: " << hadir << endl;
    cout << "Tidak hadir: " << tidakHadir << endl;
    cout << "Persentase hadir: " << persentase << "%" << endl;

    return 0;
}

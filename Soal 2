#include <iostream>
using namespace std;

int main() {
    int kodeRahasia = 7;
    int tebakan;
    bool menang = false;

    cout << "=== Pintu Dungeon ===" << endl;

    for (int i = 1; i <= 3; i++) {
        cout << "Percobaan " << i << "/3 - Tebak: ";
        cin >> tebakan;

        if (tebakan == kodeRahasia) {
            cout << "Benar!" << endl;
            menang = true;
            break;
        } else {
            cout << "Salah!" << endl;
        }
    }

    if (!menang) {
        cout << "Kalah! Angka = " << kodeRahasia << endl;
    }

    return 0;
}
